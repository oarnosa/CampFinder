<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center my-5">Edit <%= campground.name %></h1>
      <div class="form">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="campground[name]" placeholder="name"
              value="<%= campground.name %>" />
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="campground[image]" placeholder="image url"
              value="<%= campground.image %>" />
          </div>
          <div class="form-group">
            <textarea class="form-control" name="campground[description]" placeholder="description"
              rows="5"><%= campground.description %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Return to Campgrounds</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>