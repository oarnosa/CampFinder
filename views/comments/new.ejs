<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center my-5">Add a Comment to <%= campground.name %></h1>
      <div class="form">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="comment[text]" placeholder="comment" rows="5"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Return to Campgrounds</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>