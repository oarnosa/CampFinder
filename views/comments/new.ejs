<% include ../partials/header %> <% include ../partials/navbar %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="display-4" style="text-align: center; margin: 50px auto 35px;">
        Add a Comment to <%= campground.name %>
      </h1>
      <div style="width: 30%; margin: 20px auto;">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="comment[text]" placeholder="text" rows="3"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Return to Campgrounds</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>