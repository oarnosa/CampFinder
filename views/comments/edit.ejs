<% include ../partials/header %> <% include ../partials/navbar %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center my-5">Edit Comment</h1>
      <div class="form">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea class="form-control" name="comment[text]" placeholder="comment"
              rows="5"><%= comment.text %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-outline-primary btn-block">Submit</button>
          </div>
        </form>
        <a href="/campgrounds">Return to Campgrounds</a>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>